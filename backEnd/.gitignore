# Creating a GitHub repository configuration file for the collaborative task management application
gitignore_content = """
# Node.js
node_modules/
npm-debug.log
yarn-error.log

# Build output
dist/
build/

# Environment variables
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Logs
logs
*.log

# IDEs and Editors
.idea/
.vscode/
.DS_Store
*.swp
*.swo

# Coverage directory used by tools like istanbul
coverage/

# SASS cache
.sass-cache/

# Temporary files
tmp/
temp/
"""

# Saving the .gitignore file
gitignore_file_path = "/mnt/data/.gitignore"
with open(gitignore_file_path, "w") as file:
    file.write(gitignore_content)

gitignore_file_path
